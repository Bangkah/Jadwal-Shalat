APP_NAME="Prayer Times API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_VERSION=3.0.0

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=prayer_times
DB_USERNAME=root
DB_PASSWORD=

# Alternative PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=prayer_times
# DB_USERNAME=postgres
# DB_PASSWORD=

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Prayer Times Configuration
PRAYER_CACHE_TTL=3600
PRAYER_DEFAULT_CITY="Banda Aceh"
PRAYER_DEFAULT_LAT=5.5483
PRAYER_DEFAULT_LON=95.3238
PRAYER_FAJR_ANGLE=18
PRAYER_ISHA_ANGLE=17

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=1

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://jadwal-shalat-indonesia.vercel.app"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"